{
  "name": "weather-app",
  "version": "1.0.0",
  "description": "An app that displays the weather the location selected by the user",
  "main": "index.js",
  "scripts": {
    "deploy": "webpack --mode production && git add -A && git commit -m 'Deploy to gh-pages' && git push -d origin gh-pages && git push && git subtree push --prefix dist origin gh-pages && xdg-open https://github.com/IvanDerlich/weather-app/tree/gh-pages",    "build": "webpack --mode production && xdg-open ./dist/index.html",
    "build-no-open": "webpack --mode production",
    "dev": "webpack --mode development && xdg-open ./dist/index.html",
    "dev-no-open": "webpack --mode development",
    "start": "webpack-dev-server --mode development --open",
    "watch": "webpack --mode production --watch",
    "b": "webpack --mode production && xdg-open ./dist/index.html",
    "bn": "webpack --mode production",
    "s": "webpack-dev-server --mode development --open",
    "w": "webpack --mode production --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanDerlich/weather-app.git"
  },
  "author": "Ivan Derlich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IvanDerlich/weather-app/issues"
  },
  "homepage": "https://github.com/IvanDerlich/weather-app#readme",
  "dependencies": {
    "@babel/core": "^7.9.6",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.5.3",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "file-loader": "^6.0.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "node-sass": "^4.14.1",
    "path": "^0.12.7",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2"
  }
}
